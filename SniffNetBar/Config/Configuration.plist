<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Logging Configuration -->
	<key>DebugLogging</key>
	<false/>

	<!-- UI Update Configuration -->
	<key>MenuUpdateInterval</key>
	<real>1.0</real>
	<key>DeviceListRefreshInterval</key>
	<real>30.0</real>
	<key>MaxTopHostsToShow</key>
	<integer>5</integer>
	<key>MaxTopConnectionsToShow</key>
	<integer>10</integer>
	<key>MapMenuViewHeight</key>
	<real>220.0</real>
	<key>MenuFixedWidth</key>
	<real>420.0</real>

	<!-- Reconnection Configuration -->
	<key>ReconnectDelay</key>
	<real>5.0</real>
	<key>MaxReconnectAttempts</key>
	<integer>3</integer>

	<!-- Location Cache Configuration -->
	<key>MaxLocationCacheSize</key>
	<integer>500</integer>
	<key>LocationCacheExpirationTime</key>
	<real>7200</real>

	<!-- Map Configuration -->
	<key>DefaultMapProvider</key>
	<string>ipinfo.io</string>
	<key>MaxConnectionLinesToShow</key>
	<integer>10</integer>
	<key>ConnectionLineColor</key>
	<string>#ff7a18</string>
	<key>ConnectionLineWeight</key>
	<integer>3</integer>
	<key>ConnectionLineOpacity</key>
	<real>0.5</real>

	<!-- Threat Intelligence Configuration -->
	<key>ThreatIntelCacheSize</key>
	<integer>1000</integer>
	<key>ThreatIntelCacheTTL</key>
	<real>3600.0</real>

	<!-- Explainability Configuration -->
	<key>ExplainabilityEnabled</key>
	<true/>
	<key>ExplainabilityOllamaBaseURL</key>
	<string>http://127.0.0.1:11434</string>
	<key>ExplainabilityOllamaModel</key>
	<string>llama3.1</string>
	<key>ExplainabilityOllamaTimeout</key>
	<real>10.0</real>
	<key>ExplainabilityMinScore</key>
	<real>0.90</real>

	<!--
	API Keys Configuration:
	API keys are now stored securely in the macOS Keychain.
	Use the "Configure API Keys" menu option to set them.
	The values below are placeholders for reference only.
	-->

	<!-- VirusTotal Provider Configuration -->
	<key>VirusTotalEnabled</key>
	<true/>
	<key>VirusTotalAPIURL</key>
	<string>https://www.virustotal.com/api/v3</string>
	<key>VirusTotalAPIKey</key>
	<string>YOUR_API_KEY_HERE</string>
	<key>VirusTotalTimeout</key>
	<real>10.0</real>
	<key>VirusTotalMaxRequestsPerMin</key>
	<integer>4</integer>
	<key>VirusTotalTTL</key>
	<real>86400.0</real>

	<!-- AbuseIPDB Provider Configuration -->
	<key>AbuseIPDBEnabled</key>
	<true/>
	<key>AbuseIPDBAPIURL</key>
	<string>https://api.abuseipdb.com/api/v2</string>
	<key>AbuseIPDBAPIKey</key>
	<string>YOUR_API_KEY_HERE</string>
	<key>AbuseIPDBTimeout</key>
	<real>10.0</real>
	<key>AbuseIPDBMaxRequestsPerMin</key>
	<integer>60</integer>
	<key>AbuseIPDBTTL</key>
	<real>86400.0</real>
	<key>AbuseIPDBMaxAgeInDays</key>
	<integer>90</integer>
</dict>
</plist>
